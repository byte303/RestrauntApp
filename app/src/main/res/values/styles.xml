<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OtpWidget"/>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TitleFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="BorderDialog">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/borders</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="TitleDialog">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HelperTextDialog">
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextProfile">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/element_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/text</item>
    </style>

    <style name="TextProfile">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/background</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/text</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@drawable/borders_radius</item>
        <item name="android:windowFrame">@null</item>
        <item name="colorPrimary">@color/text</item>
        <item name="colorPrimaryVariant">@color/text</item>
        <item name="textColorAlertDialogListItem">@color/text</item>
    </style>

    <style name="ButtonSettings" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/background</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:drawableEnd">@drawable/ic_baseline_arrow_forward_ios_24</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonBottomSheet">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/osn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ImageViewCopy">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_baseline_content_copy_24</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/selector_edtbox</item>
        <item name="hintTextColor">@color/text</item>
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ToolbarsSubtitleText">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolbarsTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/element_radius</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="TextViewMyMoney">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
       <item name="android:textColor">@color/text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="EditTextBuy">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_radius_90</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColorHint">@color/text</item>
    </style>

    <style name="LinearBuy">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_radius_90</item>
        <item name="android:backgroundTint">@color/osn</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/osn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButtonTrading">
        <item name="android:layout_weight">1</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageViewHelp">
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:src">@drawable/ic_baseline_help_24</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
    </style>

    <style name="RadioButtonStatsStyle">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/radio_stats_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

</resources>