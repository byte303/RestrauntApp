<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="@color/borders"
    android:orientation="vertical"
    android:elevation="10dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:id="@+id/txtTitle"
        android:text="Информация по заказу"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtText"
        android:layout_marginTop="10dp"
        android:textColor="@color/text"
        android:text="Вы действительно хотите установить данному заказу статус 'Подано'?\nВнимание! После данного действия он изчезнет из списка заказов!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAccept"
        android:visibility="gone"
        android:text="Принять заказ"
        android:layout_marginTop="10dp"
        style="@style/ButtonStyle" />
    <Button
        android:id="@+id/btnDone"

        android:text="Завершить заказ"
        android:layout_marginTop="10dp"
        style="@style/ButtonStyle" />


</LinearLayout>